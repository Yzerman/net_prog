        <TextBox x:Name="txtBoxFirstNameSearch" HorizontalAlignment="Left" Height="23" Margin="125,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtBoxLastNameSearch" HorizontalAlignment="Left" Height="23" Margin="282,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
